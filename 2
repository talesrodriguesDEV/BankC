							break;
		
							//LISTAR CONTAS DE UM CLIENTE
							case 'L':
							case 'l':								
								system("cls");
								int Cc;
								int o = 1;								
								printf("Digite o código ou o CPF/CNPJ do cliente: ");
								fflush(stdin);
								scanf("%d", &Cc);
								if(Cc == clientes[o].codigo || Cc == clientes[o].CPF || Cc == clientes[o].CNPJ){
									for(o = 1; o <= ContClientes; o++){
										printf("Cliente: %s\n", clientes[o].nome);
										if(clientes[o].contas[2].agencia == 0) {
											printf("Conta 1\n");
											printf("Agência: %d\n", clientes[o].contas[1].agencia);
											printf("Número: %d\n", clientes[o].contas[1].NumConta);
											printf("Saldo: %d\n", clientes[o].contas[1].saldo);
											printf("\n");
										} else {																					
												printf("Conta 1\n");
												printf("Agência: %d\n", clientes[o].contas[1].agencia);
												printf("Número: %d\n", clientes[o].contas[1].NumConta);
												printf("Saldo: %d\n", clientes[o].contas[1].saldo);												
												printf("Conta 2\n");
												printf("Agência: %d\n", clientes[o].contas[2].agencia);
												printf("Número: %d\n", clientes[o].contas[2].NumConta);
												printf("Saldo: %d\n", clientes[o].contas[2].saldo);
												printf("\n");	
											}	
									}
									system("pause");
									system("cls");
									goto MenuContas;	
								} else{
									system("cls");
									printf("Nenhuma conta cadastrada.\n");
									system("pause");
									system("cls");
									goto MenuContas;
									}																							
							//ordem decrescente do saldo da conta	
							break;
						
							//REALIZAR SAQUE
							case 'W':
							case 'w':																	
								MenuSaque:								
								system("cls");
								int codsaque;
								int valorsaque;
								int p = 1;
								int q;
								printf("Digite a agência ou o número da conta: ");
								fflush(stdin);
								scanf("%d", &codsaque);								
								if(codsaque == clientes[p].contas[q].agencia ||
								codsaque == clientes[p].contas[q].NumConta){																
									for(p = 1; p <= ContClientes; p++){
										for(q = 1; q <=2; q++){
											system("cls");
											printf("Dados do cliente:\n");
											printf("Código: %d\n", clientes[p].codigo);
											printf("Nome: %s\n", clientes[p].nome);
											if(clientes[p].CNPJ == 0){
												printf("CPF: %d\n", clientes[p].CPF);
											} else{
												printf("CNPJ: %d\n", clientes[p].CNPJ);
												}
											printf("Telefone: %d\n", clientes[p].telefone);
											printf("Endereço: %s\n", clientes[p].endereco);
											printf("Saldo da conta %d: %.2f", clientes[p].contas[q].NumConta );
											system("pause");	
											system("cls");
											int opsaque;
											printf("Qual valor deseja sacar ?\n");
											printf("1 - R$ 50,00\n");
											printf("2 - R$ 100,00\n");
											printf("3 - R$ 200,00\n");
											printf("4 - R$ 500,00\n");										
											fflush(stdin);	
											scanf("%d", &opsaque);
												switch(opsaque){
													case 1:
														valorsaque = 50;												
													break;
											
													case 2:
														valorsaque = 100;
													break;
											
													case 3:
														valorsaque = 200;
													break;
											
													case 4:
														valorsaque = 500;
													break;																																		
												}
											void PrintNotas(){
												switch(valorsaque){
													case 50:
														PrintNotas50();
													break;
												
													case 100:
														PrintNotas100();
													break;
												
													case 200:
														PrintNotas200();
													break;
												
													case 500:
														PrintNotas500();
													break;													
												}													
											}															
											fflush(stdin);
											scanf("%d", &valorsaque);
											if(valorsaque <= clientes[p].contas[q].saldo){																									
												printf("Digite uma descrição para esse saque: ");											
												fflush(stdin);
												scanf("%s", transacoes[ContTransacoes].descricao);
												clientes[p].contas[q].saldo = clientes[p].contas[q].saldo - valorsaque;
												transacoes[ContTransacoes].tipo = 'D';
												transacoes[ContTransacoes].valor = valorsaque;
												strftime(transacoes[ContTransacoes].data, 10, "%d/%m/%y", timeinfo);
												system("cls");
												PrintNotas();
												system("pause");
												system("cls");
												goto MenuContas;
											} else {
												system("cls");
												printf("Saldo insuficiente.\n");
												system("pause");
												system("cls");
												goto MenuContas;
												}	
										}
									}
								} else{
									system("cls");
									printf("Conta não encontrada.\n");
									system("pause");
									system("cls");
									goto MenuSaque;
									}
							break;
			
							//REALIZAR DEPÓSITO
							case 'D':
							case 'd':	
								system("cls");
								
							break;	
		
							//REALIZAR TRANSFERÊNCIA
							case 'T':
							case 't':	
								system("cls");
							break;
									
							//EXIBIR EXTRATO
							case 'E':
							case 'e':	
								system("cls");
							break;
						
							//SAIR 
							case 'S':
							case 's':	
								system("cls");	
								goto MenuPrincipal;
							break;
				
							//ERRO
							default:
								system("cls");
								printf("Por favor, digite um comando válido.\n");
								system("pause");														
								system("cls");
								goto MenuContas;
						}
		break;
	
		//SAIR	
		case 'S':
		case 's':	
			system("cls");
			system("exit");
		break;
		
		//ERRO
		default:			
			system("cls");
			printf("Por favor, digite um comando válido.\n");
			system("pause");
			getchar();
			system("cls");
			goto MenuPrincipal;	
	}
	return 0;
}
